<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorBlackBackground</item>
    </style>

    <style name="NavigationView">
        <item name="android:listDivider">@color/gray_alpha</item>
        <item name="android:textColorSecondary">@color/gray_alpha</item>
    </style>

    <style name="textBlack" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/black_overlay</item>
    </style>

    <style name="textRedDanger" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/text_red</item>
    </style>

    <style name="textDisable" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/disable_color</item>
    </style>

    <style name="textPrimaryDark" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="textDefault" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textDefaultNormal" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>
